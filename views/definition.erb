<h3>Word: <%= @definition.word.name %></h3>
<h4>Definition: <%= @definition.name %></h4>
<br>
<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Change Definition</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>
<br>
<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>